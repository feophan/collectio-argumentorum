---
import MainLayout from "../../layouts/MainLayout.astro";
import Prose from '../../components/Prose.astro';
import {getCollection} from "astro:content";
import type { CollectionEntry } from "astro:content";

export async function getStaticPaths() {
    const allBlogArticles: CollectionEntry<'blog'>[] = await getCollection('blog');

    return allBlogArticles.map(entry => ({
        params: {
            slug: entry.slug
        },
        props: {entry}
    }));
}

const {entry} = Astro.props
const {Content} = await entry.render();
---

<MainLayout>
    <a href="/articles" class="p-2.5 inline-block mb-6 text-sm font-medium text-white bg-sky-500 rounded-lg hover:bg-sky-800 focus:ring-4 focus:outline-none focus:ring-sky-300">Back To Arguments</a>
    <Prose>
        <Content/>
    </Prose>
  </MainLayout>